
let rec rat_signal = \c i -> delay (match select (wait keyboard) (wait minute) with
	_ -> (match i with
	        | 0 -> "(_)_(_)" :: rat_signal c 1
        	| 1 -> " (o o)" :: rat_signal c 2
	        | 2 -> "~~\./~~" :: (if c then rat_signal c 3 else never)
        	| _ -> "" :: rat_signal c 0
	)
);


console <- "" :: rat_signal false 0;
